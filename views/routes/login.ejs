<% layout("/layouts/boilerplate") -%>

<div class="card m-5 p-5">
  <a href="/announcement" class="btn btn-outline-primary" style="width: 7%;"><i class="bi bi-arrow-left"></i> Back</a>
  <br>
  <center>Please Login to access this page</center>

  <form>
    
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
      />
      <div id="emailHelp" class="form-text">
        We'll never share your email with anyone else.
      </div>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label m-r">Password</label>
      <input type="password" class="form-control m-r" id="exampleInputPassword1" />
    </div>
    
    <button type="submit" class="btn btn-outline-success">Login</button>
    <a href="/announcement/signUp" class="btn btn-outline-danger">Sign Up</a>
  </form>
</div>
