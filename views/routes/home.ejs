<% layout("/layouts/boilerplate") -%>

<div
  data-bs-spy="scroll"
  data-bs-target="#navbar-example2"
  data-bs-root-margin="0px 0px -40%"
  data-bs-smooth-scroll="true"
  class="scrollspy-example bg-body-tertiary rounded-2b border-2b border-primary-2b"
  tabindex="0"
>
  <!-- Land Page -->
  <div class="land-page" id="scrollspyHeading1">
    <div
      id="carouselExampleCaptions"
      class="carousel slide carousel-fade"
      data-bs-ride="carousel"
      data-bs-pause="false"
    >
      <div class="carousel-indicators">
        <button
          type="button"
          data-bs-target="#carouselExampleCaptions"
          data-bs-slide-to="0"
          class="active"
          aria-current="true"
          aria-label="Slide 1"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleCaptions"
          data-bs-slide-to="1"
          aria-label="Slide 2"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleCaptions"
          data-bs-slide-to="2"
          aria-label="Slide 3"
        ></button>
      </div>

      <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="5000">
          <img
            src="https://shorturl.at/qsDMT"
            class="d-block w-100"
            alt="..."
          />
          <div class="carousel-caption d-none d-md-block">
            <h5>First slide label</h5>
            <p>Some representative placeholder content for the first slide.</p>
          </div>
        </div>

        <div class="carousel-item" data-bs-interval="5000">
          <img
            src="https://shorturl.at/tzCD6"
            class="d-block w-100"
            alt="..."
          />
          <div class="carousel-caption d-none d-md-block">
            <h5>Second slide label</h5>
            <p>Some representative placeholder content for the second slide.</p>
          </div>
        </div>

        <div class="carousel-item" data-bs-interval="5000">
          <img
            src="https://shorturl.at/ADFKY"
            class="d-block w-100"
            alt="..."
          />
          <div class="carousel-caption d-none d-md-block">
            <h5>Third slide label</h5>
            <p>Some representative placeholder content for the third slide.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container land-page">
    <h4 id="scrollspyHeading2">First Section</h4>
    <p>
      This is the first section of the page. It has a button that will take you
      to the second section of the page.
    </p>
    <button
      type="button"
      class="btn btn-primary"
      data-bs-target="#scrollspyHeading3"
      data-bs-offset="0"
      onclick="scrollToElement('scrollspyHeading3')"
    >
      Go to second section
    </button>
  </div>

  <div class="container land-page">
    <h4 id="scrollspyHeading3">Second Section</h4>
    <p>
      This is the second section of the page. It has a button that will take you
      to the third section of the page.
    </p>
    <button
      type="button"
      class="btn btn-primary"
      data-bs-target="#scrollspyHeading4"
      data-bs-offset="0"
      onclick="scrollToElement('scrollspyHeading4')"
    >
      Go to third section
    </button>
  </div>

  <div class="container land-page">
    <h4 id="scrollspyHeading4">Third Section</h4>

    <div class="timeline"></div>
  </div>

  <button
    type="button"
    class="btn btn-primary"
    data-bs-target="#scrollspyHeading5"
    data-bs-offset="0"
    onclick="scrollToElement('scrollspyHeading5')"
  >
    Go to fourth section
  </button>
</div>

<div class="container land-page">
  <h4 id="scrollspyHeading5">Fourth Section</h4>
  <p>
    This is the fourth section of the page. It has a button that will take you
    to the first section of the page.
  </p>
  <button
    type="button"
    class="btn btn-primary"
    data-bs-target="#scrollspyHeading1"
    data-bs-offset="0"
    onclick="scrollToElement('scrollspyHeading1')"
  >
    Go back to home
  </button>
</div>
